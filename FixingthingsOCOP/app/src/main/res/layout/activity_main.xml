        android:layout_below="@id/input9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="SoHangSao"
        android:id="@+id/input10"/>

    <EditText
        android:layout_below="@id/input10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
